<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>g:\\msdial-2.80 translation files\\test\\carrotOut.log</file>
    <append>false</append>
    <encoder>
      <pattern>%msg%n%ex</pattern>
    </encoder>
  </appender>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date{ISO8601} %level %line --- [%thread] %logger{5} - %msg%n%ex</pattern>
    </encoder>
  </appender>

  <logger name="edu.ucdavis.fiehnlab.ms.carrot.core.msdial.peakpicking" level="debug" aditivity="false">
    <appender-ref ref="FILE" />
  </logger>
  <logger name="org" level="INFO"/>

  <root level="DEBUG">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
